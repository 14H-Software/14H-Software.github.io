<!-- 
	Brushes list:
	
		1. Dot_Brush    tile of 4x4 px fields with 2x2 px dot in center
		2. Rect_Brush   tile of 3x3 px fields with 2x2 px square in center
	
 -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<DrawingBrush x:Key="Dot_Brush" Viewport="0,0,4,4" ViewportUnits="Absolute" TileMode="Tile">
		<DrawingBrush.Drawing>
			<DrawingGroup>
				<GeometryDrawing Brush="#31000000">
					<GeometryDrawing.Geometry>
						<EllipseGeometry RadiusX="2" RadiusY="2" Center="1,1"/>
					</GeometryDrawing.Geometry>
				</GeometryDrawing>
			</DrawingGroup>
		</DrawingBrush.Drawing>
	</DrawingBrush>

	<DrawingBrush x:Key="Rect_Brush" Viewport="0,0,3,3" ViewportUnits="Absolute" TileMode="Tile">
		<DrawingBrush.Drawing>
			<DrawingGroup>
				<GeometryDrawing Brush="#21000000">
					<GeometryDrawing.Geometry>
						<RectangleGeometry Rect="0,0,2,2" RadiusX="2" RadiusY="2" />
					</GeometryDrawing.Geometry>
				</GeometryDrawing>
			</DrawingGroup>
		</DrawingBrush.Drawing>
	</DrawingBrush>
</ResourceDictionary>
